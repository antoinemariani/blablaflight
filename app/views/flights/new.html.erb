<div class="container pt-5">
<h3>Add your new flight :</h3>
  <%= simple_form_for [@flight] do |f| %>
    <%= f.input :capacity %>
    <%= f.input :date %>
    <%= f.input :departure, label: "Departure airport" %>
    <%= f.input :arrival, label: "Arrival airport" %>
    <%= f.input :photo, as: :file, label: "Plane or Flight picture" %>
    <%= f.input :price, label: "Price (per passenger)" %>
    <%= f.submit class: "btn btn-flat mt-4" %>
  <% end %>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
